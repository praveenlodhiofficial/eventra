generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
}

model User {
  id          String  @id @default(uuid())
  name        String?
  email       String  @unique
  password    String
  phoneNumber String?
  role        Role    @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
